---
import Table from "@ui/Table.astro";
let { headings } = Astro.props;
// console.log("headings:", headings);
---

<aside aside-type="info">
    <Table>
        {
            headings.map((heading) => {
                if (heading.depth == 1) {
                    return (
                        <h2>
                            <a href={`#${heading.slug}`}>{heading.text}</a>
                        </h2>
                    );
                } else if (heading.depth == 2) {
                    return (
                        <h3>
                            <a href={`#${heading.slug}`}>{heading.text}</a>
                        </h3>
                    );
                } else {
                    return (
                        <p>
                            <a href={`#${heading.slug}`}>{heading.text}</a>
                        </p>
                    );
                }
            })
        }
    </Table>
</aside>
