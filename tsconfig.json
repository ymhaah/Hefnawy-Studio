{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
            "@comp/*": ["src/components/*"],
            "@ui/*": ["src/components/ui/*"],
            "@lay/*": ["src/layouts/*"]
        }
    }
}
